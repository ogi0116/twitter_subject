 <% tweet.post_comments.each do |post_comment| %>
  <p><%= image_tag post_comment.user.get_profile_image(100,100) %>
     <%= post_comment.user.name %>
     <%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
     <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", tweet_post_comment_path(post_comment.tweet, post_comment), method: :delete %>
    <% end %>
 <% end %>

<%= form_with model: [tweet, post_comment] do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>


