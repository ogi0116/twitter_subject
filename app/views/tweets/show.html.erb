<div>
  <%= image_tag @tweet.get_image, size:'500x500' %>
  <p>caption<%= @tweet.caption %></p>
  <p>User image：<%= image_tag 'sample-author1.jpg', size:'100x100' %></p>
  <p>User name：<%= @tweet.user.name %></p>
  <p>投稿日：<%= @tweet.created_at.strftime('%Y/%m/%d') %></p>
    <% if @tweet.user == current_user %>
    <%= link_to "削除", tweet_path(@tweet), method: :delete %>
  <% end %>
</div>
