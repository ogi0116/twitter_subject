<!-- ユーザーの詳細 -->
<div class='container px-5 my-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 '>
      <h2>User infomation</h2>
      <%= render 'info', user: @user %>
      <h2>Tweet form</h2>
      <%= render 'tweets/tweet', tweet: @tweet %>
    </div>


    <div class='col-md-8 offset-md-1'>
     <table class="table table-user">
     <% @tweets.each do |tweet| %>
      <div>
        <p>
           <%= image_tag tweet.get_image, size: '500x500' %>
        </p>
        <p>
          <%= link_to tweet_path(tweet.id) do %>
           <%= image_tag tweet.user.get_profile_image(100,100) %>
           <%= tweet.user.name %>
          <% end %>
        </p>
        <p><%= tweet.caption %></p>
     </div>
    <% end %>
  </div>
</div>